---
import { getLevel } from '@/ts/get-level';
import { getId, getChosenClass } from '@/ts/get-id';

const id = getId(Astro.url.pathname);
const { level } = await getLevel(id);

const clazz = await getChosenClass(id);
const healthDice = clazz.dados_golpe;
---

<article class='h-full shadow p-4 number'>
  <section
    class=`p-4 rounded-lg 
    flex flex-col justify-center items-center gap-4 
    h-full pressed`
  >
    <h6 class='text-2xl uppercase font-bold con'>Dados de Golpe</h6>
    <hr class='w-full' />
    <h3 class='text-4xl'>{level}<span>d</span>{healthDice}</h3>
  </section>
</article>

<style>
  span {
    color: #999;
    text-transform: uppercase;
  }
</style>
