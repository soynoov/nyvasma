    >
  </div>
</header>

<style>
  /* Debug */
  /* * {
    border: solid 1px var(--white);
  } */
  /* Globales */
  header,
  .imagotipo a,
  .menu {
    display: flex;
    align-items: center;

    width: 100%;
  }
  /* Individuales */
  header {
    background: url(/src/assets/noise.svg);
    background-color: var(--black);
    font-family: var(--title);

    position: sticky;
    top: 0;
  }
  /* -- Imagotipo */
  .imagotipo {
    width: 100%;
  }
  .imagotipo a {
    width: 75%;

    margin: 0;
    padding: 0;

    cursor: default;
  }
  /* -- Enlaces */
  a {
    font-weight: bold;
    text-align: center;
    text-transform: uppercase;
    transition: all 300ms ease;

    padding: 1rem;
    margin-inline: 1rem;

    width: 5cm;
    border-radius: 0.5rem;
  }
  .menu a:hover {
    box-shadow: var(--shadow-pressed-theme);
    background-color: var(--theme);
  }
  .mobile-menu {
    display: none;
  }
  /* -- Textos */
  h1 {
    color: var(--theme);
  }

  /* Responsive */
  @media (max-width: 1300px) {
    .menu {
      display: none;
    }
    .mobile-menu {
      display: block;
    }
  }
</style>
