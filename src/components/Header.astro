---
// Rutas
const characters = '/personajes';
const universe = '/universo';
const tools = '/herramientas';
const wiki = '/enciclopedia';
const campaigns = '/campañas';
---

<header class='h-[2cm] justify-between z-50'>
  <div class='imagotipo p-2'>
    <a href='/'>
      <img
        src='/isotipo.svg'
        alt='isotipo'
        class='h-[1.75cm] p-2 cursor-pointer'
      />
      <div class='text-left p-4 cursor-pointer'>
        <h2 class='text-gray-400'>NooVs in D&D</h2>
        <h1 class='text-2xl'>Nyvasma</h1>
      </div>
    </a>
  </div>
  <ul class='menu justify-end'>
    <a href={campaigns}>
      <li>Campañas</li>
    </a>
    <a href={characters}>
      <li>Personajes</li>
    </a>
    <a href={universe}>
      <li>Universo</li>
    </a>
    <a href={wiki}>
      <li>Enciclopedia</li>
    </a>
    <a href={tools}>
      <li>Herramientas</li>
    </a>
  </ul>
  <div class='mobile-menu p-4 fill-white'>
    <svg
      id='fi_8777583'
      height='24'
      viewBox='0 0 512 512'
      width='24'
      xmlns='http://www.w3.org/2000/svg'
      data-name='Layer 1'
      ><path
        d='m35.021 218.979h441.958a37.021 37.021 0 0 1 0 74.042h-441.958a37.021 37.021 0 0 1 0-74.042zm441.958 32h-441.958a5.022 5.022 0 0 0 0 10.044h441.958a5.022 5.022 0 0 0 0-10.044zm-441.958-175.022h441.958a37.022 37.022 0 0 1 0 74.043h-441.958a37.022 37.022 0 0 1 0-74.043zm441.958 32h-441.958a5.022 5.022 0 0 0 0 10.043h441.958a5.022 5.022 0 0 0 0-10.043zm-441.958 254.043h441.958a37.022 37.022 0 0 1 0 74.043h-441.958a37.022 37.022 0 0 1 0-74.043zm441.958 32h-441.958a5.022 5.022 0 0 0 0 10.043h441.958a5.022 5.022 0 0 0 0-10.043zm-441.958-276h441.958a5.022 5.022 0 0 0 0-10.043h-441.958a5.022 5.022 0 0 0 0 10.043zm441.958 132.978h-441.958a5.022 5.022 0 0 0 0 10.044h441.958a5.022 5.022 0 0 0 0-10.044zm0 143.022h-441.958a5.022 5.022 0 0 0 0 10.043h441.958a5.022 5.022 0 0 0 0-10.043z'
